{#<?php#}
{{ shell.open_container( 'div', 'wrap-footer-section', 'wrap footer-section' ) }}
	{% do action( 'maera/footer/content/ewa', 'footer', 'row' ) %}
	{% do action( 'maera/footer/content' ) %}



	{% if theme_mods.footer_social_toggle == 1 %}
		{% set social = true %}
	{% else %}
		{% set social = false %}
	{% endif %}

	{% set social_width = theme_mods.footer_social_width %}
	{% set width = 12 - social_width %}

	{% if theme_mods.footer_social_new_window_toggle == 1 %}
		{% set blank = ' target="_blank"' %}
	{% else %}
		{% set blank = null %}
	{% endif %}

	{{ shell.open_container( 'div', 'footer-copyright' ) }}
		{{ shell.open_row( 'div' ) }}
			{{ shell.open_col( 'div', 'large', 'copyright-bar' ) }}
				{{ theme_mods.footer_text|replace({'[year]': now|date('Y') ,'[sitename]': bloginfo('name') }) }}
			{{ shell.close_col( 'div' ) }}
			{{ shell.clearfix() }}
		{{ shell.close_row( 'div' ) }}
	{{ shell.close_container( 'div' ) }}

{{ shell.close_container( 'div' ) }}
