{#<?php#}
{% import 'shell.html.twig' as shell %}

{{ shell.container_open( 'div', 'wrap-footer-section', 'wrap footer-section' ) }}
	{% do action( 'maera/footer/content/ewa', 'footer', 'row' ) %}
	{% do action( 'maera/footer/content' ) %}



	{% if theme_mods.footer_social_toggle == 1 %}
		{% set social = true %}
	{% else %}
		{% set social = false %}
	{% endif %}

	{% set social_width = theme_mods.footer_social_width %}
	{% set width = 12 - social_width %}

	{% if theme_mods.footer_social_new_window_toggle == 1 %}
		{% set blank = ' target="_blank"' %}
	{% else %}
		{% set blank = null %}
	{% endif %}

	{{ shell.container_open( 'div', 'footer-copyright' ) }}
		{{ shell.row_open( 'div' ) }}
			{{ shell.column_open( 'div', 'large', 'copyright-bar' ) }}
				{{ theme_mods.footer_text|replace({'[year]': now|date('Y') ,'[sitename]': bloginfo('name') }) }}
			{{ shell.column_close( 'div' ) }}
			{{ shell.clearfix() }}
		{{ shell.row_close( 'div' ) }}
	{{ shell.container_close( 'div' ) }}

{{ shell.container_close( 'div' ) }}
