{#<?php#}
{% import 'grid_classes.html.twig' as grid %}

{% do action( 'maera/footer/before', post.ID ) %}
{% if sidebar.pre_footer %}{{ sidebar.pre_footer }}{% endif %}
<footer class="page-footer">
	{% do action( 'maera/footer/start', post.ID ) %}
	<div class="{{ grid.container() }} wrap footer-section" id="wrap-footer-section">
		{% if sidebar.footer %}{{ sidebar.footer }}{% endif %}
		{% do action( 'maera/footer/content' ) %}
		{% if theme_mods.footer_social_toggle == 1 %}
			{% set social = true %}
		{% else %}
			{% set social = false %}
		{% endif %}

		{% set social_width = theme_mods.footer_social_width %}
		{% set width = 12 - social_width %}

		{% if theme_mods.footer_social_new_window_toggle == 1 %}
			{% set blank = ' target="_blank"' %}
		{% else %}
			{% set blank = null %}
		{% endif %}

		<div class="{{ grid.container() }}" id="footer-copyright">
			<div class="{{ grid.row() }}">
				{{ theme_mods.footer_text|replace({'[year]': now|date('Y') ,'[sitename]': bloginfo('name') }) }}
				<div class="clearfix"></div>
			</div>
		</div>

	</div>
	{% do action( 'maera/footer/end', post.ID ) %}
</footer>
{% do action( 'maera/footer/after', post.ID ) %}
{% if sidebar.post_footer %}{{ sidebar.post_footer }}{% endif %}
{{ function( 'wp_footer' ) }}
</body>
</html>
